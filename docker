version: "2.1"

services:

  nginx:
    depends_on:
      - php
    image: nginx:mainline-alpine
    restart: always
    ports:
      - 80:80
# Comment out for https
#      - 443:443
    networks:
      - default
    volumes:
      - /path/to/nginx-config:/etc/nginx
      - /path/to/webroot:/var/www
# Comment out for Let's Encrypt
#      - /path/to/webroot/letsencrypt:/var/letsencrypt
# Comment out for Let's Encrypt files
#      - /path/to/nginx-conf/letsencrypt:/etc/nginx/ssl:ro
    container_name: nginx
    
  php:
    image: mdoerges/alpine-php72withexts
    restart: always
    networks:
      - default
    expose:
      - "9000"
    volumes:
      - /path/to/webroot:/var/www
    container_name: php
  
